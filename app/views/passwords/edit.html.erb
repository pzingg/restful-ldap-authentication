<% title('Change Password', false) -%>
<h2>Change password for user '<%=h @user.login %>'</h2>
<% @user.new_password = @user.password_confirmation = nil %>

<%= error_messages_for :user %>
<% form_for :user, :url => updatepw_url do |f| -%>

<p><%= label_tag 'new_password', 'New password' %><br/>
<%= f.password_field :new_password %></p>

<p><%= label_tag 'password_confirmation', 'Confirm new password' %><br/>
<%= f.password_field :password_confirmation %></p>

<p><%= submit_tag 'Change password' %></p>
<% end -%>
